{
    "env": {
        "node": true,
        "es6": false
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readable",
        "SharedArrayBuffer": "readable"
    },
    "parserOptions": {
        "ecmaVersion": 5,
        "ecmaFeatures": {
            "globalReturn": true
        }
    },
    "rules": {
        "valid-jsdoc": [
            "error"
        ],
        "indent": [
            "error",
            4,
            {
                "FunctionExpression": 
                {
                    "parameters": "first"
                }
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "space-infix-ops": [
            "error"
        ],
        "eqeqeq": [
            "error"
        ],
        "no-undef": [
            "error", 
            { 
                "typeof": true 
            }
        ]
    }
}